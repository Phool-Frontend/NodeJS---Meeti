<main class="contenedor contenedor-formulario">
    <h1><%= nombrePagina %> </h1>

    <form class="default-form"  method="post" enctype="multipart/form-data">
        

        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen" id="nombre" placeholder="Nombre Grupo">
        </div>
        <% if(grupo.imagen) {  %> 
            <div class="campo">
                <label>Imagen Actual</label>
                <img src="/uploads/grupos/<%= grupo.imagen %>" width="400">
            </div>    
        <% } else { %> 
            <p>No hay imagen actual</p>
        <% } %> 
        <div class="campo enviar">
            <input type="submit" value="Subir imagen" class="btn btn-rosa">
        </div>
    </form>
</main>